<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginStart="@dimen/recycler_item_margin_start">

    <android.support.v7.widget.CardView
        android:id="@+id/card"
        android:layout_width="@dimen/recycler_card_width"
        android:layout_height="@dimen/recycler_card_height">

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/recycler_card_text_margin_horizontal"
            android:layout_marginEnd="@dimen/recycler_card_text_margin_horizontal"/>

    </android.support.v7.widget.CardView>
</LinearLayout>